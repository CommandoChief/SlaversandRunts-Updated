    public static class SlaverApperanceUtils
    {
        public enum SlaverState
        {
            Slaver,
            Runtix,
            Neutral,
        }

        public static bool GeneIsSimilar(GeneDef geneA, GeneDef geneB)
        {
            if (geneA == geneB)
            {
                return true;
            }
            var SlaverGrpsDefs = GlobalSettings.GetVekkarousChosenGroups();
            foreach (var group in SlaverGrpsDefs)
            {
                if (group.Contains(geneA) && group.Contains(geneB))
                {
                    return true;
                }
            }
            return false;
        }

        public static ThoughtState GeSlaverApperanceThoughtState(List<GeneDef> targetGenes, SlaverState targetApperance, List<GeneDef> observerGenes, SlaverState observerApperance, int offset=0)
        {
            bool BothVekkarousChosen = false;
            bool differentLevel = false;
            int sharedRomanceChanceGenes = 0;
            int unsharedRomanceChanceGenes = 0;
            if (observerApperance != SlaverState.Neutral && targetApperance != observerApperance)
            {
                BothVekkarousChosen = true;
                differentLevel = true;
            }
            else if (targetApperance == observerApperance)
            {
                BothVekkarousChosen = true;
            }

            observerGenes.Where(x => x != Defs.SlaverApperanceStandards &&
                                     x != Defs.SlaverApperanceStandards_Lesser &&
                                     x.missingGeneRomanceChanceFactor < 1).ToList().ForEach(x =>
            {
                if (!targetGenes.Any(y => GeneIsSimilar(x, y)))
                {
                    unsharedRomanceChanceGenes++;
                }
                else
                {
                    sharedRomanceChanceGenes++;
                }
            });

            targetGenes.Where(x => x != Defs.SlaverApperanceStandards &&
                                   x != Defs.SlaverApperanceStandards_Lesser &&
                                   x.missingGeneRomanceChanceFactor < 1).ToList().ForEach(x =>
            {
                if (!observerGenes.Any(y => GeneIsSimilar(x, y)))
                {
                    unsharedRomanceChanceGenes++;
                }
            });

            float percentShared = 0;
            if (sharedRomanceChanceGenes != 0)
            {
                percentShared = (float)sharedRomanceChanceGenes / (sharedRomanceChanceGenes + unsharedRomanceChanceGenes);
                percentShared -= differentLevel ? 0.25f : 0;
            }
            else if (BothVekkarousChosen)
            {
                // Handle the case where both are Slaver-like but have no "missing romance" genes at all.
                if (differentLevel && unsharedRomanceChanceGenes == 0 && sharedRomanceChanceGenes == 0)
                {
                    percentShared = 0.26f;
                }
                else if (unsharedRomanceChanceGenes == 0)
                {
                    percentShared = 1;
                }
            }

            ThoughtState result;
            if (BothVekkarousChosen)
            {
                result = percentShared switch
                {
                    float n when n > 0.9 => ThoughtState.ActiveAtStage(0 + offset), // Small Bonus.
                    float n when n > 0.44 => ThoughtState.ActiveAtStage(1 + offset), // Tiny bonus
                    float n when n > 0.24 => ThoughtState.ActiveAtStage(3 + offset),
                    float n when n > 0.0 => ThoughtState.ActiveAtStage(4 + offset),
                    _ => ThoughtState.ActiveAtStage(5 + offset), // Max Penalty.
                };
            }
            else
            {
                result = percentShared switch
                {
                    float n when n > 0.44 => ThoughtState.ActiveAtStage(2 + offset),
                    float n when n > 0.19 => ThoughtState.ActiveAtStage(4 + offset),
                    _ => ThoughtState.ActiveAtStage(5 + offset),
                };
            }

            return result;
        }
    }

    public class ThoughtWorker_SlaverApperance : ThoughtWorker
    {
        protected override ThoughtState CurrentSocialStateInternal(Pawn observingPawn, Pawn targetPawn)
        {
            if (!targetPawn.RaceProps.Humanlike || !RelationsUtility.PawnsKnowEachOther(observingPawn, targetPawn))
            {
                return false;
            }
            if (PawnUtility.IsBiologicallyOrArtificiallyBlind(observingPawn))
            {
                return false;
            }
            bool someTolerance = false;
            if (ModsConfig.IdeologyActive)
            {
                bool fullTolerance = observingPawn.Ideo?.HasPrecept(Defs.AlienAppearanceTolerance_FullTolerance) == true;
                if (fullTolerance)
                {
                    return false;
                }
                someTolerance = observingPawn.Ideo?.HasPrecept(BSDefs.AlienAppearanceTolerance_SomeTolerance) == true;
            }
            if (observingPawn.story?.traits != null)
            {
                if (observingPawn.story.traits.HasTrait(TraitDefOf.Kind) == true ||
                    observingPawn.story.traits.HasTrait(TraitDefOf.Transhumanist))
                {
                    if (someTolerance) return false;  // If there was already tolerance, exit out early.
                    someTolerance = true;
                }
            }
            if (targetPawn.genes is Pawn_GeneTracker tgtGenes && observingPawn.genes is Pawn_GeneTracker obGenes)
            {
                var tgtActiveGenes = GeneHelpers.GetAllActiveGeneDefs(targetPawn);
                var obActiveGenes = GeneHelpers.GetAllActiveGeneDefs(observingPawn);

                var targetApperance = SlaverApperanceUtils.SlaverState.Neutral;
                if (tgtActiveGenes.Contains(Defs.SlaverApperanceStandards))
                    targetApperance = SlaverApperanceUtils.SlaverState.Slaver;
                else if (tgtActiveGenes.Contains(Defs.SlaverApperanceStandards_Lesser))
                    targetApperance = SlaverApperanceUtils.SlaverState.Runtix;

                var observerApperance = SlaverApperanceUtils.SlaverState.Neutral;
                if (obActiveGenes.Contains(Defs.SlaverApperanceStandards))
                    observerApperance = SlaverApperanceUtils.SlaverState.Slaver;
                else if (obActiveGenes.Contains(Defs.SlaverApperanceStandards_Lesser))
                    observerApperance = SlaverApperanceUtils.SlaverState.Runtix;


                if (!(targetApperance == SlaverApperanceUtils.SlaverState.Neutral && targetApperance == observerApperance)) // If both are neutral, no need to check.
                {
                    bool someoneIsSlaver = targetApperance == SlaverApperanceUtils.SlaverState.Slaver || observerApperance == SlaverApperanceUtils.SlaverState.Slaver;
                    
                    int offsetState = 0;
                    if (someoneIsSlaver && !someTolerance)
                    {
                        offsetState = 6;
                        int tgtBeauty = (int)targetPawn.GetStatValue(StatDefOf.PawnBeauty);
                        if (tgtBeauty > 0)
                        {
                            offsetState = 6 * tgtBeauty + 6;
                        }
                    }
                    var result = SlaverApperanceUtils.GetSlaverApperanceThoughtState(tgtActiveGenes.ToList(), targetApperance, obActiveGenes.ToList(), observerApperance, offsetState); ;
                    if (someTolerance && result.StageIndex > 1)
                    {
                        if (result.StageIndex > 4 && someoneIsSlaver)
                        {
                            result = ThoughtState.ActiveAtStage(3); // Clamp to "uncomfortably alien" if above 4.
                        }
                        else if (result.StageIndex == 2)
                        {
                            return false;
                        }
                        else
                        {
                            result = ThoughtState.ActiveAtStage(2); // Clamp to "uncanny" if just above 2.
                        }
                    }
                    
                    return result;
                }
            }
            return false;
        }
    }

