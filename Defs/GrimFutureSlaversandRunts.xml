   <!--Fierce Tribe-->
    <FactionDef ParentName="TribeRoughBase">
     <defName>Beasts of Giant-Bug</defName>
        <label>Enslavers of Giant-Bug</label>
     <description> These are pacts of Slavers and Runts who have turned their back on the Worship of Saviik and Vek’karous in favour of serving a Eldritch Draconian Insect that consumes worlds as they would have you believe.</description>
     <colorSpectrum>
     <pawnSingular>Devourer Worshipper</pawnSingular>
     <pawnsPlural>Devourer Worshippers</pawnsPlural>
     <allowedCultures><li>Corunan</li></allowedCultures>
     <structureMemeWeights>
         <Structure_TheistEmbodied MayRequire="Ludeon.RimWorld.Ideology">1</Structure_TheistEmbodied>
     </structureMemeWeights>
     <requiredMemes>
         <li MayRequire="Ludeon.RimWorld.Ideology">raider</li>
         <li MayRequire="Ludeon.RimWorld.Ideology">Collectivist</li>
         <li MayRequire="Ludeon.RimWorld.Ideology">human primacy</li>
     </requiredMemes>
     <xenotypeSet Inherit="False">
       <xenotypeChances>
         <Slaver MayRequire="Ludeon.RimWorld.Biotech">0.9</Slaver>
        <Runtix MayRequire="Ludeon.RimWorld.Biotech">0.5</Runtix>
     </xenotypeChances>
     </xenotypeSet>
     <disallowedPrecepts>
       <li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Strong_Subordinate</li>
       <li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Soft_Subordinate</li>
     </disallowedPrecepts>
       <li>(0.85, 0.75, 0.37)</li>
       <li>(0.94, 0.61, 0.06)</li>
     </colorSpectrum>
     <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
     <configurationListOrderPriority>30</configurationListOrderPriority>
   </FactionDef>


